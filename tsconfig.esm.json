{
  "compilerOptions": {
    "rootDir": "src/",
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.esm.tsbuildinfo",
    "declaration": true,
    // "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "dist/esm",
    // "noImplicitAny": true,
    "strict": true
    // "noEmitOnError": true
  },
  "include": ["src/*.ts"],
  "exclude": ["__tests__/"]
}
